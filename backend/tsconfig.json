{
  "compilerOptions": {
    "target": "ES6",                             
    /* Modules */
    "module": "commonjs",                                
    "outDir": "./dist",
    "rootDir": "./src",
    /* Interop Constraints */
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            

    /* Type Checking */
    "strict": true,                                      
    /* Completeness */
    "skipLibCheck": true,                                 
    "typeRoots": ["./node_modules/@types"] 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}